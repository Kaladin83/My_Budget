<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/change_category_layout2"
    android:background="?attr/colorPrimaryVariant"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/header_txt"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.25"
        android:background="?attr/colorPrimary"
        android:text="@string/new_category_layout"
        android:textSize="9pt"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/separator_1"
        android:background="?android:attr/textColorPrimary"
        app:layout_constraintBottom_toBottomOf="@+id/header_txt"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RadioButton
        android:id="@+id/new_category_radio"
        android:paddingHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintBottom_toTopOf="@+id/existing_category_txt"
        app:layout_constraintStart_toStartOf="parent"
        android:buttonTint="?attr/colorSecondary"/>

    <TextView
        android:id="@+id/new_category_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.41"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintBottom_toTopOf="@id/existing_category_txt"
        app:layout_constraintStart_toEndOf="@+id/new_category_radio"
        android:textSize="8pt"
        android:textAlignment="textStart"
        android:text="@string/new_category" />

    <EditText
        android:id="@+id/category_edit"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginHorizontal="5dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toTopOf="@+id/category_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/new_category_txt"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintWidth_percent="0.42" />

    <View
        android:id="@+id/edit_place_holder"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingHorizontal="5dp"
        app:layout_constraintBottom_toTopOf="@+id/category_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintStart_toEndOf="@+id/new_category_txt"
        app:layout_constraintTop_toBottomOf="@+id/separator_1"
        app:layout_constraintWidth_percent="0.42" />

    <RadioButton
        android:id="@+id/existing_category_radio"
        android:gravity="center"
        android:paddingHorizontal="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/new_category_txt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/ok_button"
        android:buttonTint="?attr/colorSecondary"/>

    t<TextView
        android:id="@+id/existing_category_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintWidth_percent="0.41"
        app:layout_constraintTop_toBottomOf="@+id/new_category_txt"
        app:layout_constraintBottom_toTopOf="@id/ok_button"
        app:layout_constraintStart_toEndOf="@+id/new_category_radio"
        android:textAlignment="textStart"
        android:paddingVertical="13dp"
        android:textSize="8pt"
        android:text="@string/existing_category" />

    <Spinner
        android:id="@+id/category_spinner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.12"
        app:layout_constraintWidth_percent="0.42"
        app:layout_constraintBottom_toTopOf="@+id/cancel_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/category_edit"
        app:layout_constraintStart_toEndOf="@+id/existing_category_txt"
        android:layout_marginHorizontal="5dp"/>

    <View
        android:id="@+id/separator_2"
        android:background="?android:attr/textColorPrimary"
        app:layout_constraintBottom_toTopOf="@id/ok_button"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/ok_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintWidth_percent="0.50"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="0dp"
        android:background="?attr/colorSecondaryVariant"
        android:text="@string/ok_button" />

    <View
        android:id="@+id/separator_3"
        android:layout_width="2dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintStart_toEndOf="@+id/ok_button"
        app:layout_constraintEnd_toStartOf="@id/cancel_button"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="?android:attr/textColorPrimary"/>

    <Button
        android:id="@+id/cancel_button"
        android:padding="0dp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.23"
        app:layout_constraintWidth_percent="0.49"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:background="?attr/colorSecondaryVariant"
        android:text="@string/cancel_button" />

</androidx.constraintlayout.widget.ConstraintLayout>