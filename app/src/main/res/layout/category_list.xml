<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="144dp"
    android:id="@+id/main_list_layout"
    android:layout_gravity="center"
    android:layout_height="35dp">

    <RelativeLayout
        android:id="@+id/background_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:background="@color/red">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="40dp"
            android:src="@drawable/delete_white"/>

        <TextView
            android:layout_width="60dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="16sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_category_list_layout"
        style="?recyclerItem"
        android:layout_width="match_parent"
        android:clickable="false"
        android:layout_gravity="center"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/text_txt"
            android:clickable="false"
            android:layout_width="90dp"
            android:layout_height="25dp"
            android:layout_alignParentStart="true"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="4dp"
            android:singleLine="true"
            android:gravity="center"
            android:ellipsize="end"
            android:textAlignment="center" />

        <LinearLayout
            android:id="@+id/color_category_layout"
            android:clickable="false"
            android:layout_width="32dp"
            android:layout_height="20dp"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/text_txt">

            <TextView
                android:id="@+id/color_category_txt"
                android:clickable="false"
                android:layout_width="30dp"
                android:layout_marginEnd="2dp"
                android:layout_height="20dp"/>

            <TextView
                android:id="@+id/color_category_sub_txt"
                android:clickable="false"
                android:layout_width="14dp"
                android:layout_height="20dp"/>
        </LinearLayout>

    </RelativeLayout>

    <View
        style="?attr/separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>