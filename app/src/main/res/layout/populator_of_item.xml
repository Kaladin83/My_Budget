<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/object_layout"
    android:gravity="center"
    style="?recyclerItem"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/background_layout"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/red">

        <ImageView
            android:id="@+id/delete_icon"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:src="@drawable/delete_white"/>

        <TextView
            android:layout_width="70dp"
            android:layout_height="20dp"
            android:layout_centerVertical="true"
            android:layout_marginEnd="10dp"
            android:layout_toStartOf="@id/delete_icon"
            android:text="@string/delete"
            android:textColor="#fff"
            android:textSize="18sp" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/main_layout"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center"
        android:background="@color/white">

            <RelativeLayout
                android:id="@+id/main_row_layout"
                android:layout_alignParentTop="true"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="20dp"
                android:layout_height="45dp">

                <TextView
                    android:id="@+id/arrow_txt"
                    android:layout_alignParentStart="true"
                    android:layout_gravity="center"
                    android:layout_marginStart="5dp"
                    android:background="@drawable/icon_bending_arrow"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

                <TextView
                    android:id="@+id/amount_txt"
                    android:layout_toEndOf="@+id/arrow_txt"
                    android:layout_marginStart="7dp"
                    android:textAlignment="textStart"
                    android:layout_width="85dp"
                    android:layout_height="20dp"/>

                <TextView
                    android:id="@+id/date_added_txt"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:textAlignment="textEnd"
                    android:layout_width="120dp"
                    android:layout_height="20dp" />
            </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_below="@+id/main_row_layout"
            android:id="@+id/description_layout"
            app:layout_scrollFlags="scroll|enterAlways">

            <Button
                android:id="@+id/ok_btn"
                android:layout_alignParentEnd="true"
                android:layout_width="25dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_height="25dp"
                android:visibility="gone"/>

            <Button
                android:id="@+id/cancel_btn"
                android:layout_toStartOf="@+id/ok_btn"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:visibility="gone" />

            <EditText
                android:id="@+id/description_edit"
                android:layout_alignParentStart="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="0dp"
                android:textSize="8pt"/>


        </RelativeLayout>

        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="@color/black"
            android:visibility="gone"
            android:layout_height="2px"/>
    </RelativeLayout>
</FrameLayout>