<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.mybudget.MainActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.89"
        android:paddingBottom="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/main_menu_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.11"
        style="?navLayoutBackground"
        android:gravity="center_horizontal"
        android:paddingBottom="3dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageButton
            android:id="@+id/categories_btn"
            android:layout_width="35dp"
            android:layout_marginEnd="22dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_categories"/>

        <ImageButton
            android:id="@+id/charts_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="22dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_charts"/>

        <ImageButton
            android:id="@+id/voice_btn"
            android:layout_width="40dp"
            android:layout_height="50dp"
            android:layout_marginEnd="22dp"
            android:layout_gravity="center"
            android:src="@drawable/mic"/>

        <ImageButton
            android:id="@+id/edit_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="22dp"
            android:layout_gravity="center"
            android:src="@drawable/icon_edit" />

        <ImageButton
            android:id="@+id/sync_btn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="center"
            android:src="@drawable/sync"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
