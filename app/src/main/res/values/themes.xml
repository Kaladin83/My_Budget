<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DayTheme" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/very_light_green</item>
        <item name="colorAccent">@color/light_green</item>
        <item name="colorSurface">@color/super_light_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/very_light_black</item>
        <item name="colorOnSurface">@color/super_light_green</item>
        <item name="colorOnBackground">@color/red</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--         actionBar. very_light_green-->
        <item name="titleTextColor">?android:attr/textColorSecondary</item>
        <item name="actionMenuTextColor">?android:attr/textColorSecondary</item>
        <item name="actionBarSize">@dimen/tool_bar</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">?attr/colorPrimaryVariant</item>

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="tabStyle">@style/TabsStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="navLayoutBackground">@style/NavigationLayoutStyle</item>
        <item name="borderedBackground">@style/BorderStyle</item>
        <item name="tabStyleBorderedBackground">@style/HalfBorderStyle</item>
        <item name="headerBackground">@style/HeaderStyle</item>
        <item name="recyclerItem">@style/RecyclerItemStyle</item>
        <item name="separator">@style/RecyclerDecoratorStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="spinnerItem">@style/SpinnerItemStyle</item>
        <item name="toggleView">@style/ToggleViewStyle</item>
        <item name="menuColor">?attr/colorPrimary</item>
        <item name="radioButtonStyle">@style/RadioStyle</item>
        <item name="spinnerStyle">@style/SpinnerStyle</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_black</item>
        <item name="colorPrimaryVariant">@color/very_light_black</item>
        <item name="colorOnPrimary">@color/super_light_black</item>
        <item name="colorAccent">@color/light_black</item>
        <item name="colorSurface">@color/ultra_light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/turquoise</item>
        <item name="colorOnSecondary">@color/teal_200</item>
        <item name="colorOnSurface">@color/turquoise</item>
        <item name="colorOnBackground">@color/light_blue</item>
        <item name="android:textColorPrimary">@color/super_light_green</item>
        <item name="android:textColorSecondary">@color/super_light_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--         actionBar. -->
        <item name="titleTextColor">?android:attr/textColorSecondary</item>
        <item name="actionMenuTextColor">?android:attr/textColorSecondary</item>
        <item name="actionBarSize">@dimen/tool_bar</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">?attr/colorOnPrimary</item>

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="tabStyle">@style/TabsStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="navLayoutBackground">@style/NavigationLayoutStyle</item>
        <item name="borderedBackground">@style/BorderStyle</item>
        <item name="tabStyleBorderedBackground">@style/HalfBorderStyle</item>
        <item name="headerBackground">@style/HeaderStyle</item>
        <item name="recyclerItem">@style/RecyclerItemStyle</item>
        <item name="separator">@style/RecyclerDecoratorStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="spinnerItem">@style/SpinnerItemStyle</item>
        <item name="toggleView">@style/ToggleViewStyle</item>
        <item name="menuColor">?attr/colorPrimary</item>
        <item name="radioButtonStyle">@style/RadioStyle</item>
    </style>
</resources>