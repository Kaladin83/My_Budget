<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="DayTheme" parent="Theme.AppCompat">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_green</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/super_light_green</item>
        <item name="colorAccent">@color/light_green</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/orange</item>
        <item name="colorSecondaryVariant">@color/light_gray</item>
        <item name="colorOnSecondary">@color/light_gray</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--         actionBar. -->
        <item name="titleTextColor">?android:attr/textColorSecondary</item>
        <item name="actionMenuTextColor">?android:attr/textColorSecondary</item>
        <item name="actionBarSize">@dimen/tool_bar</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">?attr/colorOnPrimary</item>

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="tabStyle">@style/TabsStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="navLayoutBackground">@style/NavigationLayoutStyle</item>
        <item name="borderedBackground">@style/BorderStyle</item>
        <item name="tabStyleBorderedBackground">@style/HalfBorderStyle</item>
        <item name="headerBackground">?attr/colorAccent</item>
        <item name="recyclerItem">@style/RecyclerItemStyle</item>
        <item name="separator">@style/RecyclerDecoratorStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="spinnerItem">@style/SpinnerItemStyle</item>
        <item name="toggleView">@style/ToggleViewStyle</item>
        <item name="menuColor">?attr/colorPrimary</item>
    </style>

    <style name="NightTheme" parent="Theme.AppCompat.Light">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_black</item>
        <item name="colorPrimaryVariant">@color/very_light_black</item>
        <item name="colorOnPrimary">@color/super_light_black</item>
        <item name="colorAccent">@color/light_black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/turquoise</item>
        <item name="colorOnSecondary">@color/very_light_green</item>
        <item name="android:textColorPrimary">@color/super_light_green</item>
        <item name="android:textColorSecondary">@color/super_light_green</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:windowBackground" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!--         actionBar. -->
        <item name="titleTextColor">?android:attr/textColorSecondary</item>
        <item name="actionMenuTextColor">?android:attr/textColorSecondary</item>
        <item name="actionBarSize">@dimen/tool_bar</item>
        <item name="android:itemTextAppearance">@style/MenuTextStyle</item>
        <item name="android:listPreferredItemHeightSmall">40dp</item>
        <!--To change the background of options menu-->
        <item name="android:itemBackground">?attr/colorOnPrimary</item>

        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="buttonStyle">@style/ButtonStyle</item>
        <item name="tabStyle">@style/TabsStyle</item>
        <item name="imageButtonStyle">@style/ImageButtonStyle</item>
        <item name="navLayoutBackground">@style/NavigationLayoutStyle</item>
        <item name="borderedBackground">@style/BorderStyle</item>
        <item name="tabStyleBorderedBackground">@style/HalfBorderStyle</item>
        <item name="headerBackground">?attr/colorAccent</item>
        <item name="recyclerItem">@style/RecyclerItemStyle</item>
        <item name="separator">@style/RecyclerDecoratorStyle</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="spinnerItem">@style/SpinnerItemStyle</item>
        <item name="toggleView">@style/ToggleViewStyle</item>
        <item name="menuColor">?attr/colorPrimary</item>

    </style>

    <style name="ActionBarStyle" parent="Widget.AppCompat.Light.ActionBar.Solid.Inverse">

        <item name="android:titleTextStyle">@style/ActionBarTitleTextStyle</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="titleTextColor">?android:attr/textColorSecondary</item>
<!--        <item name="android:actionBarSize">@dimen/tool_bar</item>-->
    </style>

    <style name="ActionBarTitleTextStyle" >

        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">?android:attr/textColorSecondary</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:actionMenuTextColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:background">@drawable/custom_button</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="TabsStyle" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorSecondaryVariant</item>
        <item name="tabSelectedTextColor">?attr/colorSecondary</item>
        <item name="tabTextColor">?android:attr/textColorSecondary</item>
        <item name="tabBackground">?attr/colorPrimary</item>
    </style>

    <style name="ImageButtonStyle">
        <item name="tint">@color/image_buttons_selector</item>
    </style>

    <style name="NavigationLayoutStyle">
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="BorderStyle" parent="">
        <item name="android:background">@drawable/custom_background_border_ellipse</item>
    </style>

    <style name="HalfBorderStyle" parent="">
        <item name="android:background">@drawable/custom_half_border</item>
    </style>

    <style name="RecyclerItemStyle">
        <item name="android:background">@drawable/custom_recycler_item_selector</item>
    </style>

    <style name="RecyclerDecoratorStyle">
        <item name="android:background">?attr/colorOnSecondary</item>
    </style>

    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/custom_background_border_none_ellipse</item>
    </style>

    <style name="SpinnerItemStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/custom_background_border_none_selected_not</item>
        <item name="android:layout_height">40dp</item>
    </style>

    <style name="ToggleViewStyle" parent="Widget.AppCompat.TextView">
        <item name="android:background">@drawable/custom_toggle_view_selector</item>
        <item name="android:textColor">@color/toggle_view_selector</item>
    </style>

    <style name="MenuTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">?android:attr/textColorPrimary</item>
        <item name="android:textSize">9pt</item>

    </style>

</resources>